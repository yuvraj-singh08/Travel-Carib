background: #007bff;
color: white;
border: none;
padding: 8px 12px;
border-radius: 5px;
cursor: pointer;
font-size: 14px;
}
.header {
background-color: #f0f5ff;
padding: 20px;
display: flex;
justify-content: space-between;
align-items: center;
}
.header img {
height: 40px;
}
.header .help {
font-size: 14px;
color: #555;
margin-bottom: 10px; /* Space between help text and buttons
*/
}
.header .actions {
display: flex;
gap: 10px;
float: right; /* Space
between buttons */
}
.header .actions button {
background: #007bff;
color: white;
border: none;
padding: 8px 12px;
border-radius: 5px;
cursor: pointer;
font-size: 14px;
}

.details-table { width: 100%; border-collapse: separate; border-spacing: 10px; }
