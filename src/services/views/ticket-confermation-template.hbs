@media (max-width: 580px) {
.content {
  padding: 0;
}
.flight-details {
  padding: 0;
}
.travel-details {
  padding: 0;
}
.steps {
  padding: 0;
}
}
@media (max-width: 480px) {
h2 {
  font-size: 1.2em;
}
.section h3 {
  font-size: 1em;
}
.traveler-info th,
.traveler-info td,
