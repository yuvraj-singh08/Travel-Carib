.container {
width: 90%;
max-width: 1200px;
/* Limit width on larger screens */
margin: 20px auto;
background: white;
border: 1px solid #ddd;
border-radius: 5px;
box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
overflow: hidden;
}

.header-table { width: 100%; border-collapse: separate; border-spacing: 0; background-color: #f0f5ff; }
